{
    "name": "obs-cron",
    "version": "0.1.0",
    "description": "observable cron",
    "main": "./_build/index.bundle.js",
    "module": "./_build/index.js",
    "author": "niris <nirisix@gmail.com>",
    "repository": "git@github.com:dhcmrlchtdj/obs-cron.git",
    "license": "MIT",
    "scripts": {
        "prepack": "yarn build",
        "prebuild": "rm -rf ./_build",
        "build": "tsc && rollup -c",
        "test": "yarn build && jest",
        "fmt": "prettier --write './src/**/*.ts'"
    },
    "files": [
        "_build"
    ],
    "dependencies": {
        "rxjs": "6.2.1"
    },
    "devDependencies": {
        "jest": "23.2.0",
        "prettier": "1.13.7",
        "rollup": "0.62.0",
        "typescript": "2.9.2"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "testRegex": "/__tests__/.*.js$"
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    }
}
